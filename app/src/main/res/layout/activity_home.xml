<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="@color/colorBlue">


    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Bekijk Kalender"
        android:id="@+id/btnBekijkKalender"
        android:background="@color/colorBlack"
        android:textColor="@color/colorBlue"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Plan taak"
        android:id="@+id/btnPlanTaak"
        android:background="@color/colorBlack"
        android:textColor="@color/colorBlue"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Mentale toestand klas"
        android:id="@+id/btnMentaleToestandKlas"
        android:background="@color/colorBlack"
        android:textColor="@color/colorBlue"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Gemiddelde per leraar"
        android:id="@+id/btnGemiddeldePerLeraar"
        android:background="@color/colorBlack"
        android:textColor="@color/colorBlue"
        android:layout_gravity="center_horizontal" />

</LinearLayout>