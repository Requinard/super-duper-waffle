<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.fontys.sm.superduperwaffle.ui.activities.TaakActivity"
    android:background="@color/colorBlue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Taak inplannen"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtTaakInplannen" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:inputType="text"
        android:text=""
        android:id="@+id/tbTaak"
        android:background="@color/colorWhite"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/txtTaakInplannen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Plan in"
        android:id="@+id/btnPlanIn"
        android:layout_marginTop="20dp"
        android:background="@color/colorBlack"
        android:textColor="@color/colorBlue"
        android:layout_below="@+id/tbTaak"
        android:layout_alignStart="@+id/tbTaak"
        android:layout_alignEnd="@+id/tbTaak" />



</RelativeLayout>
